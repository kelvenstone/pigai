<!DOCTYPE html>
<html>
    <head>

        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <% if current_user.admin?  %>
        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <%= yield %>
        </div>

        <%= render "common/footer" %>
      <% else %>
        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row">
              <div class="col-md-2">
                <ul class="nav nav-pills nav-stacked" style="max-width: 100px; padding-top:20px;">
                  <li class="active"><%= link_to("我要写作", woyaowrite_account_compositions_path ) %> </li>
                  <li class="active"><%= link_to("我来批改", woyaowrite_account_writings_path ) %> </li>
                </ul>
              </div>
              <div class="col-md-10">
                <%= yield %>
              </div>
           </div>
        </div>
        <%= render "common/footer" %>
      <%end%>

    </body>
</html>
