    <div class="container page-wrap ">
      <div class="devise-view">
        <img alt="background image">
        <div class="devise-sign-up">
          <div class="row">
              <div class="col-lg-4 col-lg-offset-2 col-md-6 ">
                  <div class="left">
                    <h1>51Pi</h1>
                    <div class="description">
                      <h2>批同学的作文，成自己的未来</h2>
                      <p>这是提高自己写作能力的最快速捷径之一</p>
                      <h2>我们是原装的</h2>
                      <p>作文都来自学生自己写的文章，所有的错误都是原版的！</p>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3 col-md-6 ">
                  <div class="right">
                      <h3> 登录 </h3>
                      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                          <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "请输入您的邮箱", type: "email" %>
                          <%= f.input :password, required: false, label: false, placeholder: "请输入您的密码", type: "password", id: "user_password"%>
                          <div class="checkbox">
                            <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable?, :label => "记住我", input_html: { class: "form-group boolean optional user_remember_me"}%>
                          </div>
                          <%= f.button :submit, type: "submit", name: "commit", value: "登 录", class: "btn btn-info" %>
                      <% end %>
                      <br />
                      还没有账号？  <a href="/users/sign_up">注册</a>
                      <br />
                  </div>
                </div>
            </div>
        </div>
      </div>
    </div>
