<div class="pigai">
  <div class="col-md-8 col-centered">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">
        <h2 class="text-center">所有的批改</h2>
      </div>
      <table class= "table table-hover">
        <thead>
          <tr>
            <th> 年级 </th>
            <th> 作文标题 </th>
            <th> 作文作者 </th>
            <th> 批阅者  </th>
          </tr>
        </thead>

        <tbody>
          <%= render :partial => "corrections_item", :collection => @corrections, :as => :correction %>
        </tbody>
      </table>

      <div class="text-center">
        <%= will_paginate @corrections %>
      </div>

    </div>
  </div>
</div>
