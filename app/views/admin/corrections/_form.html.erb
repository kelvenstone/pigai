<div class="correction">

  <h2> 作文标题: <%= @composition.com_title %> </h2>
  <p> 年级：<%= @composition.grade %> </p>
  <p> 写作要求： <%=h raw @composition.content %></p>
  <p> <%=@writing.user.name  %>写的作文：<%=h raw @writing.content %> </p>


</div>


<%= simple_form_for [:admin, @correction] do |f| %>
  <div class="form-input">
      <%= f.input :content, as: :summernote, :label => "我的批改" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
