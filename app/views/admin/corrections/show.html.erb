<div class="pigai">
  <div class="col-md-8 col-centered">
    <div class="panel panel-default">
      <div class="correction">
        <h2> 作文标题: <%= @composition.com_title %> </h2>
        <p> 年级：<%= @composition.grade %> </p>
        <p> 写作要求： <%=h raw @composition.content %></p>
        <p> <%=@writing.user.name  %>的作文：<%=h raw @writing.content %></p>
        <p> <%=@correction.user.name  %>的批改如下：</p>
        <p>  <%=h raw @correction.content %></p>
        <%= link_to("Delete", admin_correction_path(@correction), class:"btn btn-sm btn-default", method: :delete, data:{confirm:"Are you sure?"}) %>
        <%= link_to("返回", admin_corrections_path, class: "btn btn-primary")%>
      </div>
    </div>
  </div>
</div>
