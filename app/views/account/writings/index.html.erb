<div class="pigai">
  <div class="row">
    <div class="col-md-8 col-centered">
        <div class="panel panel-default">
          <!-- Default panel contents -->
          <div class="panel-heading">
            <h2 class="text-center">我写的作文</h2>
          </div>
        </div>
        <table class= "table table-hover">
          <thead>
            <tr>
              <th> 年级 </th>
              <th> 作文标题 </th>
              <th> 我的作文 </th>
              <th> 被批阅 </th>

            </tr>
          </thead>

          <tbody>
            <%= render :partial => "writing_item", :collection => @writings, :as => :writing %>

          </tbody>
        </table>

        <div class="text-center">
          <%= will_paginate @writings %>
        </div>

      </div>
    </div>
</div>
